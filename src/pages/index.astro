---
import HomeLayout from "../layouts/HomeLayout.astro";

const res = await fetch("http://localhost:3000/api/posts") // http://localhost:4321/api/posts by default
const posts = await res.json()
---

<HomeLayout title=' Kevin Deal Blog'>
	<h2> List of posts:</h2>
	<div>
		<ul>
			{
				posts.docs.map((post) =>(
					<li>
						<a href={`blog/${post.slug}`} set:html={post.title} />
					</li>
				))
			}
		</ul>
	</div>
</HomeLayout>